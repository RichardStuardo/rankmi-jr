<h1>Requirements#index</h1>
<p>Find me in app/views/requirements/index.html.erb</p>

<%= form_with(model: Requirement.new, local: true ) do |f| %>

 <%= f.text_field :title %>
 <%= tinymce %>
 <%= f.text_area :description, :class => "tinymce", :rows => 20, :cols => 60 %>
 <%= f.submit :Publicar %>

<% end %>

<% @requirements.each do |requirement| %>
 <div class="col-md-4">
  <h3><%= requirement.title %></h3>
  <p><%= requirement.description.html_safe %></p>
  <br>
 </div>
<% end %>